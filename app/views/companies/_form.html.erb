<%= form_with(model: company, local: true) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2>Errors:</h2>
      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :company_name %>
    <%= form.text_field :company_name %>
  </div>

  <div class="field">
    <%= form.label :year_founded %>
    <%= form.text_area :year_founded %>
  </div>

  <div class="field">
    <%= form.label :license_number %>
    <%= form.text_area :license_number %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
