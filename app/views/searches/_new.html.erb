<div class="row">
  <div class="col-sm-4 col-md-offset-4">
<%= form_for :search, url: searches_path  do |f| %>
    <div class="field">
     <%= f.label :name %><br />
     <%= f.text_field(:name, {:class => 'form-control'})%>
    </div>

    <div class="field">
     <%= f.label :gender %>
     <%= f.select :gender,['Male', 'Female']%>
    </div>

    <div class="actions">
    <%= f.submit "search", class: 'btn btn-default' %>
    </div>
<% end %>
  </div>
</div>

