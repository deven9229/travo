<div class="row">
  <div class="col-sm-4 col-md-offset-4">
<%= form_with(model: Search, local: true) do |form| %>
    <div class="field">
     <%= form.label :name %><br />
     <%= form.text_field(:name, {:class => 'form-control'})%>
    </div>

    <div class="field">
     <%= form.label :gender %>
     <%= form.select :gender,['Male', 'Female']%>
    </div>

    <div class="actions">
    <%= form.submit "search", class: 'btn btn-default' %>
    </div>
<% end %>
  </div>
</div>